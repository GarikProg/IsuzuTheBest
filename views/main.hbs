  </div>
</div>

{{!-- отрисовка конфигураций --}}
<div class="card-group">
  {{#each homeConfig}}
  <div class="card">
    {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.engine.name}} {{this.engine.value}} {{this.engine.power}}
        {{this.engine.enginePistons}}</p>
      <p class="card-text">{{this.carcass.name}} {{this.carcass.type}}</p>
      <p class="card-text">{{this.transmission.name}} {{this.transmission.type}} {{this.transmission.gearstages}}</p>
      <p class="card-text">{{this.color.name}}</p>
    </div>
  </div>
  {{/each}}
</div>
