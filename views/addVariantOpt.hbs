<div class="add-variant">
  <form action="/" method="POST">
    <div>Добавить опции</div>
    <div>Двигатель</div>
    {{#if engine}}
    <input type="text" placeholder="Название">
    <input type="text" placeholder="Объем">
    <input type="text" placeholder="Поршни">
    <input type="text" placeholder="Тип двигателя">
    <button class="add">Добавить</button>
    {{/if}}

    {{#if carcass}}
    <option value="carcass">Каркас</option>
    <input type="text" placeholder="Название">
    <input type="text" placeholder="Тип каркаса">
    <button class="add">Добавить</button>
    {{/if}}

    {{#if transmission}}
    <option value="transmission">Трансмиссия</option>
    <input type="text" placeholder="Название">
    <input type="text" placeholder="Количество передач">
    <button class="add">Добавить</button>
    {{/if}}

    {{#if color}}
    <option value="color">Цвет</option>
    <input type="text" placeholder="Название">
    <button class="add">Добавить</button>
    {{/if}}
